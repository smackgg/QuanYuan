{
  "extends": "airbnb",
  "globals": {
    "Flow": true
  },
  "rules": {
    "max-len": [
      2,
      200,
      2
    ],
    "no-console": [
      2,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ]
  }
}
